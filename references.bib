	author = {Xie, Xiaopeng and Bouchand, Romain and Nicolodi, Daniele and Giunta, Michele and Hänsel, Wolfgang and Lezius, Matthias and Joshi, Abhay and Datta, Shubhashish and Alexandre, Christophe and Lours, Michel and Tremblin, Pierre-Alain and Santarelli, Giorgio and Holzwarth, Ronald and Le Coq, Yann},
